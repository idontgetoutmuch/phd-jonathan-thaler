                , SugarScape.Core.Model
                , SugarScape.Core.Random
                , SugarScape.Core.Scenario
                , SugarScape.Core.Simulation
                , SugarScape.Core.Utils
                , SugarScape.Export.ExportRunner
                , SugarScape.Visual.GlossRunner
                , SugarScape.Visual.Renderer
  
  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:    
  
  -- Other library packages from which modules are imported.
  build-depends:        base
                      , array
                      , containers
                      , dunai
                      , gloss
                      , mtl
                      , MonadRandom
                      , optparse-applicative
                      , random
                      , split
                      , transformers
                      
  -- Directories containing source files.
  hs-source-dirs:       .
                      , src
                      , src/SugarScape

  -- Base language which the package is written in.
  default-language:    Haskell2010
  
  ghc-options:        -O2 
                      -Wall 
                      -Werror 
